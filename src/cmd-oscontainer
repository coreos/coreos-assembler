#!/usr/bin/env bash
set -eou pipefail

dn=$(dirname "$0")
# shellcheck source=src/cmdlib.sh
. "${dn}"/cmdlib.sh

prepare_build

osc="${dn}/oscontainer.py"

print_help() {
    "${osc}" --help
}

if [ "$#" -eq 0 ]; then
    print_help
    exit 1
fi

if has_privileges; then
    exec "${osc}" "$@"
else
    info "Required privileges not detected; running via supermin appliance"
    runvm "${osc}" --workdir /host/container-work "$@"
fi
